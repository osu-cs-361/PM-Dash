<h1>Project Inventory</h1>

<div class="row row-cols-1 row-cols-md-4 g-4">
    {{#each results}}
    <div class="col">
        <div class="container">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{this.projectName}}</h5>
                    <p class="card-text">Budget (USD): {{this.budget}}</p>
                    <p class="card-text">Duration (days): {{this.duration}}</p>
                    <div class="btnMargin">
                        <a href="/projects/edit/{{this.projectID}}" class="btn btn-warning">Edit</a>
                    </div>
                    <div class="btnMargin">
                        <a href="/dashboard/{{this.projectName}}" class="btn btn-primary">Go to {{this.projectName}}
                            dashboard</a>
                    </div>
                    <div class="btnMargin">
                        <a href="/datalog/{{this.projectName}}" class="btn btn-success">Go to {{this.projectName}} Daily
                            Data Log</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<div class="container" id="btnDiv">
    <div class="center">
        <a class="btn btn-primary" href="/projects/new" role="button" id="newProjectBtn">Add new project</a>
    </div>
</div>